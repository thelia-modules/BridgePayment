        <service id="bridgepayment.bank.listener" class="BridgePayment\EventListeners\BridgeBankEventListener">
            <argument type="service" id="bridgepayment.api.service"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>



    <hooks>
        <hook id="bridgepayment.hook" class="BridgePayment\Hook\BackHook">
            <tag name="hook.event_listener" event="module.configuration" type="back" method="onModuleConfiguration" />
