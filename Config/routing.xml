<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="bridgepayment_configure_save" path="/admin/module/bridgepayment/configure" methods="POST">
        <default key="_controller">BridgePayment\Controller\ConfigurationController::configure</default>
    </route>

    <route id="bridgepayment_create_payment" path="/bridge/create-payment" methods="POST">
        <default key="_controller">BridgePayment\Controller\PaymentController::createPayment</default>
    </route>

    <route id="bridgepayment_refund" path="/admin/module/bridgepayment/refund" methods="POST">
        <default key="_controller">BridgePayment\Controller\RefundController::refund</default>
    </route>

    <route id="bridgepayment_refund_success" path="/admin/module/bridgepayment/refund/success/{orderId}" methods="GET">
        <default key="_controller">BridgePayment\Controller\RefundController::refundSuccess</default>
    </route>

    <route id="bridgepayment_refund_failed" path="/admin/module/bridgepayment/refund/failed/{orderId}" methods="GET">
        <default key="_controller">BridgePayment\Controller\RefundController::refundFailure</default>
    </route>

    <route id="bridgepayment_notification" path="/bridge/notification" methods="POST">
        <default key="_controller">BridgePayment\Controller\WebHookController::notification</default>
    </route>
</routes>
